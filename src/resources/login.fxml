<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="145.0" prefWidth="240.0" xmlns="http://javafx.com/javafx/11"
      fx:controller="ui.registration.LoginController">
    <HBox prefHeight="45.0" prefWidth="600.0">
        <Label prefHeight="27.0" prefWidth="84.0" text="Логин">
            <font>
                <Font size="18.0"/>
            </font>
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
        </Label>
        <TextField fx:id="textFieldLogin">
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
        </TextField>
    </HBox>
    <HBox prefHeight="48.0" prefWidth="600.0">
        <Label prefHeight="27.0" prefWidth="85.0" text="Пароль">
            <font>
                <Font size="18.0"/>
            </font>
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
        </Label>
        <PasswordField fx:id="textFieldPassword">
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
        </PasswordField>
    </HBox>
    <HBox prefHeight="64.0" prefWidth="264.0">
        <Button maxWidth="-Infinity" mnemonicParsing="false" onAction="#onClickButtonOK" prefWidth="100.0"
                style="-fx-background-color: #00cc66;" text="ОК">
            <font>
                <Font size="14.0"/>
            </font>
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
        </Button>
        <Button maxWidth="-Infinity" mnemonicParsing="false" onAction="#onClickButtonRegistration"
                prefWidth="100.0" text="Регистрация">
            <font>
                <Font size="14.0"/>
            </font>
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
