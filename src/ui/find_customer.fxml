<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<SplitPane xmlns:fx="http://javafx.com/fxml/1" minWidth="500.0" prefHeight="600.0" prefWidth="800.0"
           xmlns="http://javafx.com/javafx/11" fx:controller="controllers.FindCustomerController">
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0"
                style="-fx-background-color: #99AA22;">
        <VBox prefHeight="798.0" prefWidth="782.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <HBox alignment="CENTER" prefHeight="202.0" prefWidth="782.0">
                <Label text="Поиск клиента">
                    <font>
                        <Font name="Book Antiqua" size="48.0"/>
                    </font>
                </Label>
            </HBox>
            <VBox prefHeight="798.0" prefWidth="782.0" style="-fx-background-color: #ffffff;">
                <Label prefHeight="45.0" prefWidth="386.0" text="Введите имя клиента">
                    <font>
                        <Font name="Book Antiqua" size="36.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="30.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Label>
                <HBox>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <TextField fx:id="editTextCustomerName" prefHeight="69.0" prefWidth="505.0">
                        <HBox.margin>
                            <Insets right="20.0"/>
                        </HBox.margin>
                        <font>
                            <Font name="Book Antiqua" size="24.0"/>
                        </font>
                    </TextField>
                    <Button mnemonicParsing="false" onAction="#onClickOk" prefHeight="69.0" prefWidth="212.0"
                            style="-fx-background-color: #ffffff; -fx-border-style: solid;" text="Найти клиента">
                        <font>
                            <Font name="Book Antiqua" size="24.0"/>
                        </font>
                    </Button>
                </HBox>
            </VBox>
        </VBox>
    </AnchorPane>
</SplitPane>
